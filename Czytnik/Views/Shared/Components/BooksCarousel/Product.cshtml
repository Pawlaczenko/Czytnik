@model IEnumerable<Czytnik_Model.ViewModels.BooksCarouselViewModel>

<div class="books-carousel">
    @foreach (var item in Model)
    {
        <div class="books-carousel__item">
            <a href="/Book/@item.Id" class="books-carousel__link">
                <img src="@item.Cover" alt="book" class="books-carousel__image">
            </a>
            <p class="books-carousel__title">@item.Title</p>
            <p class="books-carousel__author">@string.Join(", ", item.Authors)</p>
            <div class="books-carousel__rating">
                <svg class="books-carousel__star @(item.Rating == null ? "books-carousel__star--none" : "")" viewBox="0 0 32 32">
                    <use xlink:href="/assets/svg/sprite.svg#icon-star"></use>
                </svg>
                <p class="books-carousel__rate">@(item.Rating == null ? "Brak ocen" : item.Rating)</p>
            </div>
            <p class="books-carousel__price">@item.Price zł</p>
            <a href="/Buy" class="books-carousel__button books-carousel__button--secondary">
                <span class="books-carousel__button__left">Dodaj do koszyka</span>
                <span class="books-carousel__button__right">+</span>
            </a>
        </div>
    }
</div>